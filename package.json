{
  "name": "simula-tu-impuesto",
  "version": "1.0.0",
  "description": "Calculadora de impuestos RST para emprendedores colombianos - Monorepo",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "clean": "rimraf frontend/node_modules backend/node_modules frontend/dist backend/.next",
    "start": "npm run dev",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run preview"
  },
  "keywords": [
    "impuestos",
    "rst",
    "colombia",
    "emprendimiento",
    "calculadora",
    "tributacion",
    "formalizacion"
  ],
  "author": "Daniel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daniellelooo/simula-tu-impuesto.git"
  },
  "bugs": {
    "url": "https://github.com/daniellelooo/simula-tu-impuesto/issues"
  },
  "homepage": "https://github.com/daniellelooo/simula-tu-impuesto#readme",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
